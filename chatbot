<script>
let score = 0;

function goStep2() {
  document.getElementById("step1").classList.add("hidden");
  document.getElementById("quiz").classList.remove("hidden");
}

function nextQ(n) {
  if (n === 1) document.getElementById("q2").classList.remove("hidden");
  if (n === 2) document.getElementById("q3").classList.remove("hidden");
}

function finish() {
  document.getElementById("quiz").classList.add("hidden");
  document.getElementById("result").classList.remove("hidden");
  document.getElementById("dentistes").classList.remove("hidden");

  const text = document.getElementById("resultText");
  const advices = document.getElementById("advices");

  if (score === 0) {
    text.textContent = "üü¢ Risque carieux faible";
    advices.innerHTML = "<li>Continuer le brossage 2√ó/jour</li><li>Visite annuelle recommand√©e</li>";
  }
  if (score === 1 || score === 2) {
    text.textContent = "üü° Risque carieux mod√©r√©";
    advices.innerHTML = "<li>Brossage rigoureux + dentifrice fluor√©</li><li>Limiter boissons sucr√©es</li><li>Contr√¥le dentaire conseill√©</li>";
  }
  if (score >= 3) {
    text.textContent = "üî¥ Risque carieux √©lev√©";
    advices.innerHTML = "<li>Consultation dentaire rapide</li><li>Contr√¥le alimentation sucr√©e</li><li>Brossage strict quotidien</li>";
  }
}

function noQuiz() {
  document.getElementById("step1").classList.add("hidden");
  document.getElementById("adviceOnly").classList.remove("hidden");
  document.getElementById("dentistes").classList.remove("hidden");
}
